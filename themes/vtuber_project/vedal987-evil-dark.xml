<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="vedal987-evil-dark" _name="vedal987-evil-dark" version="1.0">
    <author>fm3chanic</author>
    <_description>vedal987-evil-dark by fm3chanic</_description>
  
  <!-- color values  -->
  <color name="bg1" value="#1a1a1a"/>
  <color name="bg2" value="#262626"/>
  <color name="bg3" value="#333333"/>
  <color name="fg1" value="#ca8198"/>
  <color name="fg2" value="#b44b6c"/>
  <color name="fg3" value="#7e354c"/>
  <color name="hl1" value="#808080"/>
  <color name="hl2" value="#666666"/>
  <color name="hl3" value="#4d4d4d"/>

  <color name="m1" value="#b34d72"/>
  <color name="m2" value="#c27083"/>
  <color name="m3" value="#7070a9"/>
  <color name="m4" value="#a97092"/>
  <color name="m5" value="#9e78ba"/>
  <color name="m6" value="#708ca9"/>
  <color name="s1" value="#c9829c"/>
  <color name="s2" value="#d9a6b2"/>
  <color name="s3" value="#9f9fc6"/>
  <color name="s4" value="#c69fb6"/>
  <color name="s5" value="#c3abd4"/>
  <color name="s6" value="#9fb2c6"/>

  <!-- global -->
  <style name="text"                        foreground="fg1" background="bg2"/>
  <style name="selection"                   foreground="fg1" background="hl1"/>
  <style name="cursor"                      foreground="fg1"/>
  <style name="secondary-cursor"            foreground="fg1"/>
  <style name="selection-unfocused"         foreground="fg1" background="hl2"/>
  <style name="current-line"                background="hl3"/>
  <style name="line-numbers"                background="bg1" foreground="fg3"/>
  <style name="background-pattern"          background="bg1"/>
  <style name="bracket-match"               foreground="s6" background="fg1"/>
  <style name="bracket-mismatch"            foreground="fg1" background="s1"/>
  <style name="search-match"                foreground="fg1" background="hl2"/>
	
  <!-- defaults  -->
  <style name="def:keyword"                 foreground="m6" bold="false"/>
  <style name="def:statement"               foreground="m5"/>
  <style name="def:function"                foreground="m1"/>
  <style name="def:decimal"                 foreground="m3"/>
  <style name="def:preprocessor"            foreground="m2"/>
  <style name="def:type"                    foreground="m2"/> 
  <style name="def:character"               foreground="m4"/>
  <style name="def:comment"                 foreground="fg3"/>
  <style name="def:number"                  foreground="m3"/>
  <style name="def:string"                  foreground="m4"/>
  <style name="def:net-address-in-comment"  foreground="fg3" italic="false" underline="true"/>
  <style name="def:underlined"              italic="false" underline="true"/>
  <style name="def:note"                    foreground="fg2" background="bg2" bold="true"/>
  <style name="def:error"                   foreground="m1" bold="true"/>
  <style name="def:escape"                  foreground="m1"/>
  <style name="def:shebang"                 foreground="m1" bold="false"/>
  <style name="def:doc-comment-element"     italic="true"/>
  <style name="def:identifier"              foreground="s5" bold="false"/>
  <style name="def:specials"                foreground="s5" background="purple"/>
  <style name="def:variable"                foreground="m5"/>
  <style name="def:boolean"                 foreground="s3" bold="true"/>
  <style name="def:constant"                foreground="m5"/>
  <style name="def:special-constant"        foreground="s5" bold="true"/>

  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="m6" bold="true"/>
  <style name="def:inline-code"             foreground="bg2"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="s4"/>
  <style name="def:link-symbol"             foreground="s4" bold="false"/>
  <style name="def:link-destination"        italic="s3" underline="single"/>
  <style name="def:heading"                 foreground="m2" bold="true"/>
  <style name="def:thematic-break"          foreground="s2" bold="true"/>
  <style name="def:preformatted-section"    foreground="m2"/>
  <style name="def:list-marker"             foreground="s5" bold="false"/>
  
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>

  <!-- diff  -->  
  <style name="diff:added-line"             foreground="m6"/>
  <style name="diff:removed-line"           foreground="m5"/>
  <style name="diff:changed-line"           foreground="m1"/>
  <style name="diff:diff-file"              foreground="s4" bold="false"/>
  <style name="diff:location"               foreground="s3"/>
  <style name="diff:special-case"           foreground="s2" bold="false"/>	

  <!-- language specifics  -->
  <style name="latex:command"               foreground="m6" bold="false"/>
  <style name="latex:include"               use-style="def:preprocessor"/>
</style-scheme>