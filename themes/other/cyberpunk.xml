<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="cyberpunk" _name="cyberpunk" version="1.0">
    <author>fm3chanic</author>
    <_description>cyberpunk by fm3chanic</_description>

  <!-- color values  -->
  <color name="bg1" value="#05132e"/>
  <color name="bg2" value="#081c45"/>
  <color name="bg3" value="#0a255c"/>
  <color name="fg1" value="#f4a4f4"/>
  <color name="fg2" value="#ee77ee"/>
  <color name="fg3" value="#e949e9"/>
  <color name="hl1" value="#e31ce3"/>
  <color name="hl2" value="#b616b6"/>
  <color name="hl3" value="#881188"/>

  <color name="c1" value="#ad33ff"/>
  <color name="c2" value="#33ccff"/>
  <color name="c3" value="#ff3399"/>
  <color name="c4" value="#33ffff"/>
  <color name="c5" value="#ff33ff"/>
  <color name="c6" value="#3333ff"/>
  <color name="c7" value="#6688cc"/>

  <!-- global -->
  <style name="text"                        foreground="fg1" background="bg1"/>
  <style name="selection"                   foreground="fg1" background="hl1"/>
  <style name="cursor"                      foreground="fg1"/>
  <style name="secondary-cursor"            foreground="fg1"/>
  <style name="selection-unfocused"         foreground="fg1" background="hl2"/>
  <style name="current-line"                background="hl3"/>
  <style name="line-numbers"                background="bg2" foreground="fg3"/>
  <style name="background-pattern"          background="bg3"/>
  <style name="bracket-match"               foreground="c2" background="fg1"/>
  <style name="bracket-mismatch"            foreground="c1" background="s1"/>
  <style name="search-match"                foreground="fg1" background="hl2"/>
	
  <!-- defaults  -->
  <style name="def:keyword"                 foreground="c4" bold="false"/>
  <style name="def:statement"               foreground="c3"/>
  <style name="def:function"                foreground="c3"/>
  <style name="def:decimal"                 foreground="fg1"/>
  <style name="def:preprocessor"            foreground="c2"/>
  <style name="def:type"                    foreground="c5"/> 
  <style name="def:character"               foreground="c2"/>
  <style name="def:comment"                 foreground="c7"/>
  <style name="def:number"                  foreground="fg1"/>
  <style name="def:string"                  foreground="c2"/>
  <style name="def:net-address-in-comment"  foreground="fg3" italic="false" underline="true"/>
  <style name="def:underlined"              italic="false" underline="true"/>
  <style name="def:note"                    foreground="fg3" background="bg1" bold="true"/>
  <style name="def:error"                   foreground="c1" bold="true"/>
  <style name="def:escape"                  foreground="c2"/>
  <style name="def:shebang"                 foreground="c1" bold="false"/>
  <style name="def:doc-comment-element"     italic="true"/>
  <style name="def:identifier"              foreground="fg1" bold="false"/>
  <style name="def:specials"                foreground="c2" background="bg1"/>
  <style name="def:variable"                foreground="fg1"/>
  <style name="def:boolean"                 foreground="c6" bold="false"/>
  <style name="def:constant"                foreground="fg1"/>
  <style name="def:special-constant"        foreground="fg1" bold="false"/>

  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="c1" bold="true"/>
  <style name="def:inline-code"             foreground="c6"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="c3"/>
  <style name="def:link-symbol"             foreground="c3" bold="false"/>
  <style name="def:link-destination"        italic="c5" underline="single"/>
  <style name="def:heading"                 foreground="c4" bold="true"/>
  <style name="def:thematic-break"          foreground="c4" bold="true"/>
  <style name="def:preformatted-section"    foreground="c2"/>
  <style name="def:list-marker"             foreground="fg2" bold="false"/>
  
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>

  <!-- diff  -->  
  <style name="diff:added-line"             foreground="c4"/>
  <style name="diff:removed-line"           foreground="c2"/>
  <style name="diff:changed-line"           foreground="c1"/>
  <style name="diff:diff-file"              foreground="fg1" bold="false"/>
  <style name="diff:location"               foreground="fg1"/>
  <style name="diff:special-case"           foreground="c6" bold="false"/>	

  <!-- language specifics  -->
  <style name="latex:command"               foreground="c4" bold="false"/>
  <style name="latex:include"               use-style="def:preprocessor"/>
</style-scheme>